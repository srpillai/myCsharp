@model List<TechJobsAuthentication.Models.Job>

<div class="text-center">
    <h1 class="display-4">Welcome to TechJobs!</h1>
</div>

@if (Model.Count == 0)
{
    <p>No jobs yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>Position Name</th>
            <th>Employer</th>
        </tr>
        @foreach (Job job in Model)
        {
            <tr>
                <td>@job.Name</td>
                <td>@job.Employer</td>
            </tr>
        }
    </table>
}
